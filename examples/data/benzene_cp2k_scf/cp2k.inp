&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    RESTART_FILE_NAME ./PROJ-RESTART.wfn
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-14
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 3
    &END QS
    &MGRID
      CUTOFF 600
      NGRIDS 5
    &END
    &SCF
      MAX_SCF 100
      SCF_GUESS RESTART

      EPS_SCF 1.0E-7
      ADDED_MOS 12
      CHOLESKY INVERSE
      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END
      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.2
        BETA 1.5
        NBROYDEN 8
      &END

      &OUTER_SCF
        MAX_SCF 50
        EPS_SCF 1.0E-7
      &END
    &END SCF

    &POISSON
      PERIODIC NONE
      PSOLVER MT # cell size double charge density size + 4 ang
    &END

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &PRINT
      &V_HARTREE_CUBE
        STRIDE 12 12 12
      &END
      &MO_CUBES
        NHOMO 1
        NLUMO 1
        STRIDE 12 12 12
      &END
    &END PRINT
  &END DFT
  &SUBSYS
    &CELL
      ABC 14.0 14.0 14.0
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME ./geom.xyz
      COORDINATE xyz
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END
    &KIND C
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND H
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL LOW
  PROJECT PROJ
  RUN_TYPE ENERGY
  WALLTIME 86000
  EXTENDED_FFT_LENGTHS
&END GLOBAL
